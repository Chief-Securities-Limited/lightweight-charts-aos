<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <com.google.android.material.appbar.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:title="Mock Data Charts" />

    </com.google.android.material.appbar.AppBarLayout>

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <Button
                android:id="@+id/btn_fullscreen"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:text="全屏"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <RadioGroup
                android:id="@+id/rg_k_line"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="12dp"
                android:layout_marginTop="12dp"
                android:orientation="horizontal"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/btn_fullscreen">

                <RadioButton
                    android:id="@+id/rb_minute_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:checked="true"
                    android:text="時分" />

                <RadioButton
                    android:id="@+id/rb_five_day"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="5日" />

                <RadioButton
                    android:id="@+id/rb_day_k_line"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="日K" />

                <RadioButton
                    android:id="@+id/rb_week_k_line"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="周K" />

                <RadioButton
                    android:id="@+id/rb_month_k_line"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="月K" />


                <RadioButton
                    android:id="@+id/rb_year_k_line"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="年" />

            </RadioGroup>

            <RadioGroup
                android:id="@+id/rg_k_line_group_type"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="12dp"
                android:layout_marginTop="20dp"
                android:orientation="horizontal"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/rg_k_line">

                <RadioButton
                    android:id="@+id/rb_k_line_group_type_only"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:checked="true"
                    android:text="僅K線" />

                <RadioButton
                    android:id="@+id/rb_k_line_group_type_ema"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:text="EMA" />

            </RadioGroup>

            <com.tradingview.lightweightcharts.example.app.widget.ChartsToolsLayout
                android:id="@+id/charts_tools_layout_1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="12dp"
                android:layout_marginTop="8dp"
                app:layout_constraintTop_toBottomOf="@id/rg_k_line_group_type">

                <com.tradingview.lightweightcharts.example.app.view.DebugChartsView
                    android:id="@+id/charts_view_1"
                    android:layout_width="match_parent"
                    android:layout_height="220dp" />

                <LinearLayout
                    android:id="@+id/charts_view_1_y_axis"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginTop="0dp"
                    android:layout_marginBottom="26dp"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/tv_charts_view_1_y_axis_max"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        tools:text="Max" />

                    <Space
                        android:layout_width="wrap_content"
                        android:layout_height="0dp"
                        android:layout_weight="1" />

                    <TextView
                        android:id="@+id/tv_charts_view_1_y_axis_average"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        tools:text="average" />

                    <Space
                        android:layout_width="wrap_content"
                        android:layout_height="0dp"
                        android:layout_weight="1" />

                    <TextView
                        android:id="@+id/tv_charts_view_1_y_axis_min"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        tools:text="min" />

                </LinearLayout>

            </com.tradingview.lightweightcharts.example.app.widget.ChartsToolsLayout>

            <com.tradingview.lightweightcharts.example.app.widget.ChartsToolsLayout
                android:id="@+id/charts_tools_layout_2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="12dp"
                app:layout_constraintTop_toBottomOf="@id/charts_tools_layout_1">

                <com.tradingview.lightweightcharts.view.ChartsView
                    android:id="@+id/charts_view_2"
                    android:layout_width="match_parent"
                    android:layout_height="120dp"
                    android:visibility="visible" />

                <TextView
                    android:id="@+id/tv_charts_view_2_y_axis_max"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

            </com.tradingview.lightweightcharts.example.app.widget.ChartsToolsLayout>

            <com.tradingview.lightweightcharts.example.app.widget.ChartsToolsLayout
                android:id="@+id/charts_tools_layout_3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="12dp"
                app:layout_constraintTop_toBottomOf="@id/charts_tools_layout_2">

                <com.tradingview.lightweightcharts.view.ChartsView
                    android:id="@+id/charts_view_3"
                    android:layout_width="match_parent"
                    android:layout_height="120dp"
                    android:visibility="visible" />

            </com.tradingview.lightweightcharts.example.app.widget.ChartsToolsLayout>

            <TextView
                android:id="@+id/tv_cross_plank"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/cardview_dark_background"
                android:padding="8dp"
                android:textColor="@color/design_default_color_surface"
                android:visibility="gone"
                app:layout_constraintTop_toTopOf="parent">

            </TextView>

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.core.widget.NestedScrollView>

</LinearLayout>